@model IEnumerable<ThunderCats.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Categories</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Name }, new { @class="btn btn-success"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Name }, new { @class="btn btn-info"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Name }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
